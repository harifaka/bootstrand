<Window x:Class="entity_generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BOOTSTRAND - The Ultimate Spring Boot Support" Height="480" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="86*"/>
        </Grid.ColumnDefinitions>
        <!-- Buttons for interaction -->
        <Button Name="Button1" Content="Reset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50" Margin="50,50,0,0" Click="Button1_Click"/>
        <Button Name="Button2" Content="Generate" VerticalAlignment="Top" Height="50" Margin="162,50,0,0" Click="Button2_Click" HorizontalAlignment="Left" Width="100"/>

        <!-- DataGrid for displaying CSV data -->
        <DataGrid Name="dataGrid" Margin="50,117,50,30" AutoGenerateColumns="True" Grid.ColumnSpan="2"/>
    </Grid>
</Window>